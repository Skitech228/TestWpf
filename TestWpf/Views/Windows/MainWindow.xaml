<Window x:Class="TestWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:TestWpf"
        xmlns:vm="clr-namespace:TestWpf.ViewModels" 
        xmlns:vm1="clr-namespace:TestWpf.ViewModels.Base"
        Title="{Binding Path=Title}" Height="450" Width="800">

    <Window.DataContext>
        <vm1:MainWindowViewModel/>
    </Window.DataContext>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Выход" Command="{Binding  CloseAppCommand}"></MenuItem>
            </MenuItem>
            <MenuItem Header="Hed"></MenuItem> 
        </Menu>
        <StatusBar DockPanel.Dock="Bottom"></StatusBar>
        <TabControl>
            <TabItem></TabItem>
            <TabItem></TabItem>
        </TabControl>
    </DockPanel>
</Window>
